<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>de.metas.parent</artifactId>
		<groupId>de.metas</groupId>
		<version>10.0.0</version>
	</parent>

	<groupId>de.metas.vertical.pharma</groupId>
	<artifactId>metasfresh-pharma.msv3.schema.v1</artifactId>
	<version>10.0.0</version>
	<packaging>jar</packaging>

	<dependencies>
		<dependency>
			<groupId>jakarta.xml.bind</groupId>
			<artifactId>jakarta.xml.bind-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-core</artifactId>
		</dependency>
		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-impl</artifactId>
		</dependency>
		<dependency>
			<groupId>jakarta.activation</groupId>
			<artifactId>jakarta.activation-api</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>com.sun.xml.ws</groupId>
				<artifactId>jaxws-maven-plugin</artifactId>
				<version>4.0.1</version>
				<executions>
					<execution>
						<goals>
							<goal>wsimport</goal>
						</goals>
						<phase>generate-sources</phase>
						<configuration>
							<wsdlFiles>
								<wsdlFile>Msv3BestellenService.wsdl</wsdlFile>
								<wsdlFile>Msv3VerbindungTestenService.wsdl</wsdlFile>
								<wsdlFile>Msv3BestellstatusAbfragenService.wsdl</wsdlFile>
								<wsdlFile>Msv3VertragsdatenAbfragenService.wsdl</wsdlFile>
								<wsdlFile>Msv3VerfuegbarkeitAnfragenService.wsdl</wsdlFile>
								<wsdlFile>Msv3RuecknahmeangebotAnfordernService.wsdl</wsdlFile>
								<wsdlFile>Msv3VerfuegbarkeitAnfragenBulkService.wsdl</wsdlFile>
							</wsdlFiles>
							<wsdlDirectory>${project.basedir}/src/main/resources/de/metas/vertical/pharma/vendor/gateway/msv3/schema/v1</wsdlDirectory>
							<sourceDestDir>${project.basedir}/src/main/java-xjc</sourceDestDir>
							<packageName>de.metas.vertical.pharma.vendor.gateway.msv3.schema.v1</packageName>
							<keep>true</keep>
							<verbose>true</verbose>
							<extension>true</extension>
							<args>
								<arg>-B-XautoNameResolution</arg>
							</args>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
