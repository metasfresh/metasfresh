<project
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>de.metas.parent</artifactId>
        <groupId>de.metas</groupId>
        <version>10.0.0</version>
    </parent>

    <groupId>de.metas.vertical.pharma</groupId>
    <artifactId>metasfresh-pharma.msv3.schema.v1</artifactId>
    <version>10.0.0</version>
    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>jakarta.xml.bind</groupId>
            <artifactId>jakarta.xml.bind-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jaxb</groupId>
            <artifactId>jaxb-runtime</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jaxb</groupId>
            <artifactId>jaxb-core</artifactId>
        </dependency>
        <dependency>
            <groupId>jakarta.activation</groupId>
            <artifactId>jakarta.activation-api</artifactId>
        </dependency>
        <dependency>
            <groupId>jakarta.xml.ws</groupId>
            <artifactId>jakarta.xml.ws-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.ws</groupId>
            <artifactId>jaxws-rt</artifactId>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.sun.xml.ws</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <version>4.0.2</version>
                <executions>
                    <execution>
                        <id>msv3.schema.v1</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>Msv3BestellenService.wsdl</wsdlFile>
                                <wsdlFile>Msv3VerbindungTestenService.wsdl</wsdlFile>
                                <wsdlFile>Msv3BestellstatusAbfragenService.wsdl</wsdlFile>
                                <wsdlFile>Msv3VertragsdatenAbfragenService.wsdl</wsdlFile>
                                <wsdlFile>Msv3VerfuegbarkeitAnfragenService.wsdl</wsdlFile>
                                <wsdlFile>Msv3RuecknahmeangebotAnfordernService.wsdl</wsdlFile>
                                <wsdlFile>Msv3VerfuegbarkeitAnfragenBulkService.wsdl</wsdlFile>
                            </wsdlFiles>
                            <wsdlDirectory>${project.basedir}/src/main/resources/de/metas/vertical/pharma/vendor/gateway/msv3/schema/v1</wsdlDirectory>
                            <sourceDestDir>${project.basedir}/src/main/java-xjc</sourceDestDir>
                            <packageName>de.metas.vertical.pharma.vendor.gateway.msv3.schema.v1</packageName>
                            <keep>true</keep>
                            <verbose>true</verbose>
                            <extension>true</extension>
                            <target>3.0</target>
                            <args>
                                <arg>-B-XautoNameResolution</arg>
                            </args>
                            <vmArgs>
                                <vmArg>-Djakarta.xml.bind.verbose=true</vmArg>
                            </vmArgs>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>jakarta.xml.ws</groupId>
                        <artifactId>jakarta.xml.ws-api</artifactId>
                        <version>4.0.2</version>
                    </dependency>
                    <dependency>
                        <groupId>jakarta.xml.bind</groupId>
                        <artifactId>jakarta.xml.bind-api</artifactId>
                        <version>4.0.2</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>
