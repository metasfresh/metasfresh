<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.metas.vertical.healthcare_ch</groupId>
		<artifactId>vertical-healthcare_ch</artifactId>
		<version>10.0.0</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<artifactId>vertical-healthcare_ch.forum_datenaustausch_ch.invoice_450.response</artifactId>
	<version>10.0.0</version>
	<packaging>jar</packaging>

	<dependencies>

		<dependency>
			<groupId>de.metas.vertical.healthcare_ch</groupId>
			<artifactId>vertical-healthcare_ch.forum_datenaustausch_ch.invoice_commons</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>de.metas.vertical.healthcare_ch</groupId>
			<artifactId>vertical-healthcare_ch.forum_datenaustausch_ch.invoice_xversion</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>jakarta.xml.bind</groupId>
			<artifactId>jakarta.xml.bind-api</artifactId>
		</dependency>

		<dependency>
			<groupId>de.metas.util</groupId>
			<artifactId>de.metas.util</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
		</dependency>

		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.glassfish.jaxb</groupId>
			<artifactId>jaxb-runtime</artifactId>
			<scope>runtime</scope>
		</dependency>

		<dependency>
			<groupId>org.assertj</groupId>
			<artifactId>assertj-core</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.xmlunit</groupId>
			<artifactId>xmlunit-core</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency> <!-- needed for snapshot-testing -->
			<groupId>de.metas.adempiere.adempiere</groupId>
			<artifactId>de.metas.adempiere.adempiere.base</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
			<classifier>tests</classifier>
		</dependency>
		<dependency> <!-- we need base only for testing -->
			<groupId>de.metas.adempiere.adempiere</groupId>
			<artifactId>de.metas.adempiere.adempiere.base</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<!-- source for the request xsd: http://www.forum-datenaustausch.ch/fileadmin/fda_documents/4.5/Rechnungen/XML/XML_Schema_generalInvoiceResponse_450.zip -->
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxb2-maven-plugin</artifactId>
				<version>3.3.0</version>
				<executions>
					<execution>
						<id>generate-forum-datenaustausch_ch.invoice_450.response</id>
						<phase>generate-sources</phase>
						<goals>
						    <goal>xjc</goal>
						</goals>
                        <configuration>
                            <sources>
                                <source>${project.basedir}/src/main/resources/de/metas/vertical/healthcare_ch/forum_datenaustausch_ch/invoice_450/response/generalInvoiceResponse_450.xsd</source>
                            </sources>
                            <xjbSources>
                                <xjbSource>${project.basedir}/src/main/resources/de/metas/vertical/healthcare_ch/forum_datenaustausch_ch/invoice_450/response/binding.xjb</xjbSource>
                            </xjbSources>
                            <packageName>de.metas.vertical.healthcare_ch.forum_datenaustausch_ch.invoice_450.response</packageName>
                            <outputDirectory>${project.basedir}/src/main/java-xjc</outputDirectory>
                            <clearOutputDir>false</clearOutputDir>
                            <extension>true</extension>
						
                            <!-- needed because we don't want jaxb to create a package-info.java; we have our own custom one -->
                            <noPackageLevelAnnotations>true</noPackageLevelAnnotations>
                            <arguments>
                                <!-- needed to avoid java class name collisions, since the 3 xsds have some equal names -->
                                <argument>-XautoNameResolution</argument>
                            </arguments>
                        </configuration>
					</execution>
				</executions>
                <dependencies>
                    <dependency>
                        <groupId>jakarta.xml.bind</groupId>
                        <artifactId>jakarta.xml.bind-api</artifactId>
                        <version>4.0.2</version>
                    </dependency>
                    <dependency>
                        <groupId>jakarta.activation</groupId>
                        <artifactId>jakarta.activation-api</artifactId>
                        <version>2.1.3</version>
                    </dependency>
                </dependencies>
			</plugin>
		</plugins>
	</build>
</project>
