<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <artifactId>de.metas.parent</artifactId>
        <groupId>de.metas</groupId>
        <version>10.0.0</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.metas.xfactura</groupId>
    <artifactId>de.metas.xfactura.base</artifactId>

    <properties>
        <metasfresh.version>10.0.0</metasfresh.version>
        <migration-sql-basedir/>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>de.metas.adempiere.adempiere</groupId>
            <artifactId>de.metas.adempiere.adempiere.base</artifactId>
            <version>${metasfresh.version}</version>
        </dependency>
        <dependency>
            <groupId>de.metas.document.archive</groupId>
            <artifactId>de.metas.document.archive.base</artifactId>
            <version>10.0.0</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <executions>
                    <execution>
                        <id>ciid22b</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <generatePackage>de.metas.xfactura.base.ciid22b</generatePackage>
                    <schemaDirectory>${project.basedir}/src/main/resources/de/metas/xfactura/base/ciid22b</schemaDirectory>
                    <generateDirectory>${project.basedir}/src/main/java-xjc</generateDirectory>
                    <schemaIncludes>
                        <schemaInclude>CrossIndustryInvoice_100pD22B.xsd</schemaInclude>
                    </schemaIncludes>
                    <bindingDirectory>${project.basedir}/src/main/resources/de/metas/xfactura/base/xjb</bindingDirectory>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <executions>
                    <execution>
                        <id>en16931</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <generatePackage>de.metas.xfactura.base.en16931</generatePackage>
                    <schemaDirectory>${project.basedir}/src/main/resources/de/metas/xfactura/base/en16931</schemaDirectory>
                    <generateDirectory>${project.basedir}/src/main/java-xjc</generateDirectory>
                    <schemaIncludes>
                        <schemaInclude>Factur-X_1.07.2_EN16931.xsd</schemaInclude>
                    </schemaIncludes>
                    <bindingDirectory>${project.basedir}/src/main/resources/de/metas/xfactura/base/xjb</bindingDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>

