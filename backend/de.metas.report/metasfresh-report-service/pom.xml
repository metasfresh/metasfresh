	</parent>
	<modelVersion>4.0.0</modelVersion>

	<version>10.0.0</version>
	<artifactId>metasfresh-report-service</artifactId>

	<properties>
		<migration-sql-basedir>42-de.metas.report.jasper.server</migration-sql-basedir>
