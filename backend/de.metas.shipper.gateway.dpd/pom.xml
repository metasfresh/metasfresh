<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>de.metas.parent</artifactId>
        <groupId>de.metas</groupId>
        <version>10.0.0</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <version>10.0.0</version> <!-- needed by versions:set during the jenkins build -->
    <groupId>de.metas.shipper.gateway</groupId>
    <artifactId>de.metas.shipper.gateway.dpd</artifactId>
    <packaging>jar</packaging>

    <properties>
        <migration-sql-basedir/>
        <metasfresh.version>[1,10.0.0]</metasfresh.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.ws</groupId>
            <artifactId>spring-ws-core</artifactId>
        </dependency>

        <!-- needed so we know what to implement -->
        <dependency>
            <groupId>de.metas.shipper.gateway</groupId>
            <artifactId>de.metas.shipper.gateway.spi</artifactId>
            <version>${metasfresh.version}</version>
        </dependency>

        <!-- needed for its common business logic -->
        <dependency>
            <groupId>de.metas.shipper.gateway</groupId>
            <artifactId>de.metas.shipper.gateway.commons</artifactId>
            <version>${metasfresh.version}</version>
        </dependency>

        <dependency>
            <groupId>de.metas.adempiere.adempiere</groupId>
            <artifactId>de.metas.adempiere.adempiere.base</artifactId>
            <version>${metasfresh.version}</version>
            <classifier>tests</classifier>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>de.metas.handlingunits</groupId>
            <artifactId>de.metas.handlingunits.base</artifactId>
            <version>${metasfresh.version}</version>
        </dependency>

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jaxb</groupId>
            <artifactId>jaxb-runtime</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>jakarta.xml.bind</groupId>
            <artifactId>jakarta.xml.bind-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jaxb</groupId>
            <artifactId>jaxb-core</artifactId>
        </dependency>
        <dependency>
            <groupId>jakarta.activation</groupId>
            <artifactId>jakarta.activation-api</artifactId>
        </dependency>
        <dependency>
            <groupId>jakarta.xml.ws</groupId>
            <artifactId>jakarta.xml.ws-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.ws</groupId>
            <artifactId>jaxws-rt</artifactId>
            <scope>runtime</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <!-- Note that the dependencies and some overridable parameters are specified in the parent-pom's pluginManagement section -->
                <groupId>com.sun.xml.ws</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                  <executions>
                    <execution>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlDirectory>${project.basedir}/src/main/resources/de/metas/shipper/gateway/dpd/schema</wsdlDirectory>
                            <wsdlFiles>
                                <wsdlFile>LoginServiceV2_0.wsdl</wsdlFile>
                                <wsdlFile>ShipmentServiceV3_2.wsdl</wsdlFile>
                            </wsdlFiles>
                            <bindingDirectory>${project.basedir}/src/main/resources/de/metas/shipper/gateway/dpd/schema</bindingDirectory>
                            <bindingFiles>
                                <!-- there is a known issue that we can't work with "*.xsd" -->
                                <bindingFile>Authentication_2_0.xsd</bindingFile>
                                <bindingFile>LoginService-Public_2_0.xsd</bindingFile>
                                <bindingFile>ShipmentService-Public_3_2.xsd</bindingFile>
                            </bindingFiles>

                            <sourceDestDir>${project.basedir}/src/main/java-xjc</sourceDestDir>
                            <packageName>de.metas.shipper.gateway.dpd.generated</packageName>
                            <wsdlLocation>classpath:de/metas/shipper/gateway/dpd/schema/</wsdlLocation>
                            <args>
                                <arg>-Xnocompile</arg>
                            </args>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
