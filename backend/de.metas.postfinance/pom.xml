    <build>
        <plugins>
            <plugin>
                <groupId>com.sun.xml.ws</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <version>2.3.2</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <xjcArgs>
                        <xjcArg>-XautoNameResolution</xjcArg>
                    </xjcArgs>
                    <args>
                        <arg>-Xnocompile</arg>
                    </args>
                    <keep>true</keep>
                    <vmArgs>
                        <vmArg>-Djavax.xml.accessExternalSchema=all</vmArg>
                    </vmArgs>
                    <extension>true</extension>
                    <wsdlUrls>
                        <wsdlUrl>https://ebill-ki.postfinance.ch/B2BService/B2BService.svc?wsdl</wsdlUrl>
                    </wsdlUrls>
                    <packageName>de.metas.postfinance.jaxb</packageName>
                    <sourceDestDir>${project.basedir}/src/main/java-xjc</sourceDestDir>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <executions>
                    <execution>
                        <id>ybInvoice-v2</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <generatePackage>de.metas.postfinance.ybinvoice.v2</generatePackage>
                            <schemaDirectory>${project.basedir}/src/main/resources/de/metas/postfinance/ybinvoice/v2/</schemaDirectory>
                            <generateDirectory>src/main/java-xjc</generateDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>processprotocol</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <generatePackage>de.metas.postfinance.processprotocol</generatePackage>
                            <schemaDirectory>${project.basedir}/src/main/resources/de/metas/postfinance/processprotocol/</schemaDirectory>
                            <generateDirectory>src/main/java-xjc</generateDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
