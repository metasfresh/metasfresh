<xsl:template match="/" priority="-100">
  <xsl:if test="$sf-relid = 0">
    <xsl:message terminate="yes">
      <xsl:text>You must specify the sf-relid as a parameter.</xsl:text>
    </xsl:message>
  </xsl:if>

  <xsl:apply-templates select="//fm:project"/>
</xsl:template>

